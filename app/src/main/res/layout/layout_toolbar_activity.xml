<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ll_title_bar_height"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_toolbar_back"
        android:layout_width="@dimen/iv_toolbar_icon_size"
        android:layout_height="@dimen/iv_toolbar_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/iv_toolbar_icon_margin_start"
        android:contentDescription="@string/back"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_toolbar_back" />

    <TextView
        android:id="@+id/tv_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/tv_toolbar_title_margin_start"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_toolbar_title_size"
        android:textStyle="bold" />

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_toolbar_close"
        android:layout_width="@dimen/iv_toolbar_exit_size"
        android:layout_height="@dimen/iv_toolbar_exit_size"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/iv_toolbar_exit_margin_end"
        android:contentDescription="@string/close"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_toolbar_exit"
        android:visibility="invisible" />
</LinearLayout>